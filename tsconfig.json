{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"]
}